@using ZayShop.Areas.Admin.Models.Product
@model ProductIndexVM

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Products</h1>
    <a class="btn btn-success" asp-action="create" asp-controller="product">Create</a>
</div>

<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td><img height="50px" width="100px" src="@product.Image" alt="Alternate Text" /></td>
                <td>@product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@product.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center d-flex justify-content-center">
                    <a class="btn btn-primary mx-2" asp-action="update" asp-controller="product" asp-route-id="@product.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="product" asp-route-id="@product.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
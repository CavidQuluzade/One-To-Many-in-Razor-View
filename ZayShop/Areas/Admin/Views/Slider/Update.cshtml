﻿@using ZayShop.Areas.Admin.Models.Slider
@model SliderUpdateVM

<form method="post" asp-action="update" asp-controller="Slider">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <br />
        <label class="mt-3" asp-for="SubTitle"></label>
        <input asp-for="SubTitle" class="form-control" placeholder="Enter subtitle" />
        <span asp-validation-for="SubTitle" class="text-danger"></span>
        <br />
        <label class="mt-3" asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        <br />
        <label class="mt-3" asp-for="Order"></label>
        <input asp-for="Order" class="form-control" placeholder="Enter order" />
        <span asp-validation-for="Order" class="text-danger"></span>
        <br />
        <label class="mt-3" asp-for="Image"></label>
        <input asp-for="Image" class="form-control" placeholder="Enter image address" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>